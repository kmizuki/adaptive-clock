{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "identifier": "com.example.adaptiveclock",
  "productName": "Adaptive Clock",
  "version": "0.1.2",
  "build": {
    "beforeBuildCommand": "vite build",
    "beforeDevCommand": "vite dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.ico", "icons/icon.png"]
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Adaptive Clock",
        "label": "main",
        "width": 600,
        "height": 600,
        "resizable": false,
        "fullscreen": false,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "backgroundColor": "#00000000",
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main"]
    },
    "trayIcon": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": false
    }
  }
}
